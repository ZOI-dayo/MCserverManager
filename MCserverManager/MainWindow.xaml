                                <ColumnDefinition Width="100*"/>
                                <ColumnDefinition Width="9*"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="Console_Control_TextBox" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Center" Margin="10,0"/>
